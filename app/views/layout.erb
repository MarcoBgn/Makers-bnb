<!DOCTYPE html>
<html>
  <head>
    <link href='https://fonts.googleapis.com/css?family=Oswald:700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel='stylesheet' type='text/css' href='/style.css'>
    <title>Maker's BnB</title>
  </head>
  <body>
    <div class="jumbotron">
      <h1>SPACE</h1>
      <h2>Beauty in Space</h2>
    </div>

    <div id='spacenav' class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="navbar-header">
            <%= partial :sign_out %>
        </div>
        <div class="collapse navbar-collapse ">

            <ul class="nav navbar-nav">
                <li><a href="/spaces">View Spaces</a></li>
                <li><%= partial :greeting_message %></li>
            </ul>

            <div class="col-sm-3 col-md-3 pull-right">
              <ul class="nav navbar-nav">
                <li><%= partial :account %></li>
              </ul>
            </div>

        </div>
    </div>
    <div class='flashbox'>
      <% if flash[:notice] %>
        <div><%= flash[:notice] %></div>
      <% end %>
    </div>



    <%= partial :sign_up_errors %>



    <%= yield %>

    <script type='text/javascript' src='/jquery.js'></script>
    <script src="/jquery-ui.js"></script>
    <script>

    $( document ).ready(function() {

      $(function() {
        $('#date_picker').datepicker();
      })

      $(function() {

      $( "#from" ).datepicker({
      dateFormat: "dd/mm/yy",
      defaultDate: "+1w",
      changeMonth: true,
      minDate: 0,
      onClose: function( selectedDate ) {
        $( "#to" ).datepicker( "option", "minDate", selectedDate );
      }
    });
    $( "#to" ).datepicker({
      dateFormat: "dd/mm/yy",
      defaultDate: "+1w",
      changeMonth: true,
      onClose: function( selectedDate ) {
        $( "#from" ).datepicker( "option", "maxDate", selectedDate );
      }
    });
    });
  });
    </script>

  </body>
</html>
