<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' type='text/css' href='/style.css'>
    <title>Maker's BnB</title>
  </head>

  <body>

    <%= partial :greeting_message %>

    <%= partial :sign_up_errors %>

    <%= partial :sign_out %>

    <%= yield %>

    <script type='text/javascript' src='/jquery.js'></script>
    <script src="/jquery-ui.js"></script>
    <script>

    $( document ).ready(function() {

      $(function() {
        $('#date_picker_from').datepicker({ minDate: -0, maxDate: "+2M", dateFormat: 'yy-mm-dd' });
      })

      $(function() {
        $('#date_picker_to').datepicker({ minDate: -0, maxDate: "+2M", dateFormat: 'yy-mm-dd' });
      })

      $(function() {

        var availableDays = ["2016-02-24"]

        function enableTheseDays(date) {
          var sdate = $.datepicker.formatDate( 'yy-mm-dd', date )
          if($.inArray(sdate, availableDays) != -1) {
            return [true];
          }
          return [false];
        }

        $('#request_date_picker').datepicker({ dateFormat: 'yy-mm-dd', beforeShowDay: enableTheseDays });
      })

    });

    </script>

  </body>
</html>
