<% if flash[:notice]%>
<div id='flash-error'>
  <%= flash[:notice] %>
</div>
<% end %>

<h1 class="center title">Book a Space</h1>

<div class="center">
<form action='/spaces' method='post' class="form-inline" role="form">
  <div class="form-group">
    <label for='available_from'>
      Available from (DD/MM/YY)
      <input type='text' name='available_from' class="form-control">
    </label>
  </div>
  <div class="form-group">
    <label for='available_to'>
      Available to (DD/MM/YY)
      <input type='text' name='available_to' class="form-control">
    </label>
  </div>
  <button type='submit' class="btn">List Spaces</button>
</form>
</div>

<section class="container" id='spaces'>
  <ul class="row">
    <% @spaces.each do |space| %>
    <li class="list col-lg-12">
      <a id="space" href="/requests/<%= space.id %>"><section id="space">
        <p id='title'><%= space.id %> <%= space.name%> - <span id='price'>Â£<%= space.price %> per night</span></p></br>
        <p id='desc'><%= space.description%></p>
        <p>date from:<%= space.available_from%></p>
        <p>date to:<%= space.available_to%></p>
        <form id='space_form' action='/sessions' method='post'>
          <input type='hidden' name='space' value"<%= space.id %>">
        </form>
      </section></a>
    </li>
    <% end %>
  </ul>
</section>

<p id="to-top"><a href="/spaces">to top</a></p>
