<section id='main'>
  <form action='/spaces/new' method='post'>
     <fieldset>
    <label for='name'>
      <p class='in_main'>  Name:
        <input type='text' name='name'> </p></br>
    </label>
    <label for='description'>
      <p class='in_main'> Description:
       <textarea name='description'></textarea></p></br>
    </label>
    <label for='price'>
     <p class='in_main'> Price per night: Â£
     <input type='text' name='price' required> </p></br>
    </label>
