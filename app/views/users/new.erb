
<h1>Feel at Home, Anywhere</h1>
<section id='main'>
  <form id='sign_up' action='/users/new' method='post'>
    <fieldset>
     <p class='in_main'> Email:    <input type='email' name='email' pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required ></p></br>
